<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:id="@+id/folder_view_frag_item1_thumb"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

    <LinearLayout android:id="@+id/folder_view_frag_item1_footer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:id="@+id/folder_view_frag_item1_footer_name"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"/>

        <TextView android:id="@+id/folder_view_frag_item1_footer_count"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>